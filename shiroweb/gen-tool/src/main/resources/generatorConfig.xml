<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>


    <!--<classPathEntry location="E:\Repository\mysql\mysql-connector-java\5.1.34\mysql-connector-java-5.1.34.jar" />-->

    <context id="context1" targetRuntime="MyBatis3">

        <property name="javaFileEncoding" value="UTF-8"/>
        <!--<commentGenerator>-->
            <!--&lt;!&ndash; 是否去除自动生成的注释 true：是 ： false:否 &ndash;&gt;-->
            <!--<property name="suppressAllComments" value="true" />-->

        <!--</commentGenerator>-->
        <commentGenerator type="org.mybatis.generator.MyCommentGenerator">

        </commentGenerator>

        <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/shiroweb?characterEncoding=utf8"
                        userId="root" password="root">
            <property name="useInformationSchema" value="true"/>
        </jdbcConnection>

        <!--  默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer
            true，把JDBC DECIMAL 和 NUMERIC 类型解析为java.math.BigDecimal
        -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>
        <!--自动生成的实体的存放包路径 -->
        <javaModelGenerator targetPackage="cn.i7baoz.model.bean"
                            targetProject="E:\GitHub\knowledge\shiroweb\shiro-model\src\main\java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!--自动生成的*Mapper.xml文件存放路径 -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="E:\GitHub\knowledge\shiroweb\shiro-dao\src\main\resources">
            <!--<property name="enableSubPackages" value="true"/>-->
        </sqlMapGenerator>

        <!--自动生成的*Mapper.java存放路径 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="cn.i7baoz.dao.mapper" targetProject="E:\GitHub\knowledge\shiroweb\shiro-dao\src\main\java">
            <!--<property name="enableSubPackages" value="true"/>-->
        </javaClientGenerator>


        <table tableName="shiro_user" domainObjectName="UserBean"
               enableCountByExample="false" enableUpdateByExample="false"
               enableDeleteByExample="false" enableSelectByExample="false"
               selectByExampleQueryId="false" />
        <table tableName="shiro_role" domainObjectName="RoleBean"
               enableCountByExample="false" enableUpdateByExample="false"
               enableDeleteByExample="false" enableSelectByExample="false"
               selectByExampleQueryId="false" />
    </context>


</generatorConfiguration>